/* FOOTER */
footer {
    background-color: var(--dark);
    color: var(--gold);

    display: flex;
    flex-direction: row;

    align-items: center;
    justify-content: space-around;

    width: 100%;
    font-family: 'Raleway', sans-serif;
    margin-top: 2svh;
}

footer img {
    height: auto;
    width: 10svw;
    margin: 1svw 5svw;
}

footer p, a, li {
    color: var(--gold);
}

footer ul {
    display: flex;
    flex-direction: column;
    list-style-type: none;
}

footer ul#contact {
    align-items: center;

    padding: 0;
}

footer ul#links {
    align-items: end;
}

footer div.socials {
    display: flex;
    flex-direction: row;

    width: 100%;

    justify-content: center;
}

footer div.socials a img {
    height: auto;
    width: 3svw;

    margin: 1rem;
}

/* Media query for screens with width under 800px */
@media screen and (max-width: 800px) {
    footer {
        flex-direction: column; !important
    }

    footer * {
        margin-top: 1rem; !important
    }

    footer img {
        width: 30%; !important
        height: auto; !important
    }

    footer ul{
        padding: 0; !important
        align-items: center; !important
    }

    footer ul#links {
        align-items: center; !important
    }

    footer div.socials a img {
        width: 10svw; !important
        height: auto; !important
    }
}